    <properties-param> <name>ref-addresses</name> <description>ref-addresses</description> <property
    name="driverClassName" value="${portal.container.gatein.jcr.datasource.driver}"/> <property name="url"
    value="${portal.container.gatein.jcr.datasource.url}"/> <property name="username"
    value="${portal.container.gatein.jcr.datasource.username}"/> <property name="password"
