            <name>chromattic</name>
            <set-method>addLifeCycle</set-method>
            <type>org.exoplatform.commons.chromattic.ChromatticLifeCycle</type>
            <init-params>
                <value-param>
                    <name>domain-name</name>
                    <value>softwareRegistration</value>
                </value-param>
                <value-param>
                    <name>workspace-name</name>
