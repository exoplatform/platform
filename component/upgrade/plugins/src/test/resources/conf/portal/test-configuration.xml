		<init-params>
			<value-param>
				<name>gadgets.country</name>
				<description>US</description>
				<value>US</value>
			</value-param>
			<value-param>
				<name>gadgets.language</name>
				<description>en</description>
				<value>en</value>
			</value-param>
			<value-param>
				<name>gadgets.moduleId</name>
				<description>0</description>
				<value>0</value>
