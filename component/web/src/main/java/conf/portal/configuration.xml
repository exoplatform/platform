<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
  <component>
    <type>org.exoplatform.json.JSONService</type>     
  </component>

  <component>
    <type>org.exoplatform.upload.UploadService</type>    
  </component>
  
  <component>
    <type>org.exoplatform.download.DownloadService</type>
    <init-params>
      <value-param>
        <name>download.resource.cache.size</name>
        <description>Maximun number of the download can be in the cache</description>
        <value>500</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <type>org.exoplatform.web.WebAppController</type>
  </component>
  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.application.portal.start-http-request</name>
		  <set-method>addListener</set-method>
      <type>org.exoplatform.web.SetCurrentIdentityListener</type>
		</component-plugin>
  </external-component-plugins>
</configuration>
