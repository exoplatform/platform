                    <resource>
                      <directory>${wikbook.source}/knowledge/images</directory>
                    </resource>
                    <resource>
                      <directory>${wikbook.source}/social/images</directory>
                    </resource>
                  </resources>
                </configuration>
              </execution>
            </executions>
          </plugin>

