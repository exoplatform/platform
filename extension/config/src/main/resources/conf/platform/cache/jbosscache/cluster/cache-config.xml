<jbosscache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="urn:jboss:jbosscache-core:config:3.2 http://www.jboss.org/schema/jbosscache/jbosscache-config-3.2.xsd"
            xmlns="urn:jboss:jbosscache-core:config:3.2">
  <jmxStatistics
      enabled="true" />
  <clustering
      mode="replication"
      clusterName="${exo.cluster.partition.name}-exo-cache-cluster">
    <stateRetrieval
        timeout="${exo.cache.cluster.stateretrieval.timeout:20000}"
        fetchInMemoryState="${exo.cache.cluster.stateretrieval.fetchinmemorystate:false}" />
    <jgroupsConfig
        configFile="${jcr.jgroups.config}" />
    <sync
        replTimeout="${exo.cache.cluster.sync.repltimeout:60000}" />
  </clustering>
</jbosscache>