<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_1.xsd http://www.exoplaform.org/xml/ns/kernel_1_1.xsd"
  xmlns="http://www.exoplaform.org/xml/ns/kernel_1_1.xsd">

  <!-- This declares the default portal container for Platform -->
  <component>
    <type>org.exoplatform.container.definition.PortalContainerConfig</type>
    <init-params>
      <value-param>
        <name>default.portal.container</name>
        <value>portal</value>
      </value-param>
      <value-param>
        <name>default.rest.context</name>
        <value>rest</value>
      </value-param>
      <value-param>
        <name>ignore.unregistered.webapp</name>
        <value>true</value>
      </value-param>       
      <!-- The name of the default security realm -->
      <value-param>
        <name>default.realm.name</name>
		<value>${exo.security.domain}</value> 
      </value-param>
      <object-param>
        <name>default.portal.definition</name>
        <object type="org.exoplatform.container.definition.PortalContainerDefinition">
          <!-- The path to the external properties file -->
          <field name="externalSettingsPath">
            <string>configuration.properties</string>
          </field>
          <field name="dependencies">
            <collection type="java.util.ArrayList">
              <value>
                <string>eXoResources</string>
              </value>
              <value>
                <string>portal</string>
              </value>
              <value>
                <string>dashboard</string>
              </value>
              <value>
                <string>exoadmin</string>
              </value>
              <value>
                <string>eXoGadgets</string>
              </value>
              <value>
                <string>eXoGadgetServer</string>
              </value>
              <value>
                <string>rest</string>
              </value>

              <value>
                <string>fck</string>
              </value>

              <!-- collab -->
              <value profiles="collaboration,all,default">
                <string>cs-extension</string>
              </value>

              <!-- cometd -->
              <value profiles="collaboration,knowledge,all,default">
                <string>cometd</string>
              </value>
              <value profiles="collaboration,all,default">
                <string>csResources</string>
              </value>

              <value>
                <string>web</string>
              </value>


              <value profiles="collaboration,all,default">
                <string>mail</string>
              </value>
              <value profiles="collaboration,all,default">
                <string>contact</string>
              </value>
              <value profiles="collaboration,all,default">
                <string>chat</string>
              </value>
              <value profiles="collaboration,all,default">
                <string>chatbar</string>
              </value>
              <value profiles="collaboration,all,default">
                <string>content</string>
              </value>
              <value profiles="collaboration,all,default">
                <string>calendar</string>
              </value>


              <!-- ECM -->

              <value>
                <string>eXoDMSGadgets</string>
              </value>
              <value>
                <string>eXoStaticResources</string>
              </value>
              <value>
                <string>eXoDMSResources</string>
              </value>
              <value>
                <string>eXoWCMResources</string>
              </value>
              <value profiles="dms,all">
                <string>ecmbrowsecontent</string>
              </value>
              <value>
                <string>ecmexplorer</string>
              </value>
              <value>
                <string>ecmadmin</string>
              </value>
              <value>
                <string>ecm-wcm-core</string>
              </value>
              <value>
                <string>ecm-wcm-extension</string>
              </value>
              <value>
                <string>presentation</string>
              </value>
              <value>
                <string>formgenerator</string>
              </value>
              <value>
                <string>newsletter</string>
              </value>
              <value>
                <string>searches</string>
              </value>
              <value>
                <string>authoring-apps</string>
              </value>              
              
              <value profiles="workflow,all">
                <string>ecmworkflow-extension</string>
              </value>
              <value profiles="workflow,all">
                <string>workflow</string>
              </value>
              <value profiles="workflow,all">
                <string>eXoWorkflowResources</string>
              </value>              

              <!-- SOCIAL -->
              <value profiles="social,all,default">
                <string>social-resources</string>
              </value>
              <value profiles="social,all,default">
                <string>social-portlet</string>
              </value>
              <value profiles="social,all,default">
                <string>social</string>
              </value>
              <value profiles="social,all,default">
                <string>social-extension</string>
              </value>



              <!-- Knowledge -->
              <value profiles="knowledge,all,default">
                <string>ksResources</string>
              </value>
              <value profiles="knowledge,all,default">
                <string>faq</string>
              </value>
              <value profiles="knowledge,all,default">
                <string>forum</string>
              </value>
              <value profiles="knowledge,all,default">
                <string>poll</string>
              </value>
              <value profiles="knowledge,all,default">
                <string>ks</string>
              </value>

              <!-- IDE -->
              <value profiles="ide,all,default">
                <string>SmartGWT</string>
              </value>
              <value profiles="ide,all,default">
                <string>IDE</string>
              </value>
              <!-- TODO we need an IDE extension war to bundle configuration and easy desactivation
              <value profiles="ide,all,default">
                <string>ide-extension</string>
              </value>
               -->
                            
              <!-- Contains shared layout -->
              <value>
                <string>platform-extension</string>
              </value>

              <value>
                <string>office-portal</string>
              </value>
              <value>
                <string>acme-website</string>
              </value>
              <value>
                <string>default-website</string>
              </value>
            </collection>
          </field>

          <!-- A map of settings tied to the default portal container -->
          <field name="settings">
            <map type="java.util.HashMap">
              <!-- TODO check cometd name -->
              <entry>
                <key>
                  <string>sample</string>
                </key>
                <value>
                  <string>value</string>
                </value>
              </entry>
            </map>
          </field>
        </object>
      </object-param>
    </init-params>
  </component>

  <!--
		it is necessary to declare this empty plugin in order to activate the
		extension mechanism
	-->
  <external-component-plugins>
    <target-component>org.exoplatform.container.definition.PortalContainerConfig</target-component>
    <component-plugin>
      <name>Add PortalContainer Definitions</name>
      <set-method>registerPlugin</set-method>
      <type>org.exoplatform.container.definition.PortalContainerDefinitionPlugin</type>
      <init-params>
        <object-param>
          <name>portal</name>
          <object type="org.exoplatform.container.definition.PortalContainerDefinition">
            <field name="name">
              <string>portal</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
