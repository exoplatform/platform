<infinispan
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:infinispan:config:5.2 http://www.infinispan.org/schemas/infinispan-config-5.2.xsd"
    xmlns="urn:infinispan:config:5.2">
  <global>
    <evictionScheduledExecutor
        factory="org.infinispan.executors.DefaultScheduledExecutorFactory">
      <properties>
        <property
            name="threadNamePrefix"
            value="EvictionThread" />
      </properties>
    </evictionScheduledExecutor>
    <globalJmxStatistics
        enabled="true"
        cacheManagerName="indexer"
        jmxDomain="jcr.ispn.cache"
        mBeanServerLookup="org.infinispan.jmx.PlatformMBeanServerLookup" />
    <transport
        transportClass="org.infinispan.remoting.transport.jgroups.JGroupsTransport"
        clusterName="${exo.cluster.partition.name}-jcr-indexer"
        distributedSyncTimeout="20000">
      <properties>
        <property
            name="configurationFile"
            value="${exo.jcr.cluster.jgroups.config}" />
      </properties>
    </transport>
  </global>
  <default>
    <clustering
        mode="replication">
      <stateTransfer
          timeout="${exo.jcr.cluster.indexer.statetransfer.timeout:20000}"
          fetchInMemoryState="${exo.jcr.cluster.indexer.statetransfer.fetchinmemorystate:false}" />
      <sync
          replTimeout="${exo.jcr.cluster.indexer.sync.repltimeout:20000}" />
    </clustering>
    <locking
        isolationLevel="READ_COMMITTED"
        lockAcquisitionTimeout="${exo.jcr.indexer.lockacquisitiontimeout:20000}"
        writeSkewCheck="false"
        concurrencyLevel="500"
        useLockStriping="false" />
    <transaction
        transactionManagerLookupClass="org.exoplatform.services.transaction.infinispan.JBossStandaloneJTAManagerLookup"
        syncRollbackPhase="true"
        syncCommitPhase="true"
        transactionMode="TRANSACTIONAL" />
    <jmxStatistics
        enabled="true" />
    <eviction
        strategy="NONE" />
    <loaders passivation="false" shared="false" preload="false">
      <store
          class="${infinispan-cachestore-classname}"
          fetchPersistentState="false"
          ignoreModifications="false"
          purgeOnStartup="false">
        <async
            enabled="false" />
      </store>
    </loaders>
  </default>
</infinispan>
