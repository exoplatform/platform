<?xml version="1.0" encoding="UTF-8"?>

<configuration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
  

  <component>
    <key>org.exoplatform.platform.notification.provider.ProviderManager</key>
    <type>org.exoplatform.platform.notification.provider.ProviderManagerImpl</type>
  </component>
  
  <external-component-plugins>
    <target-component>org.exoplatform.platform.notification.provider.ProviderManager</target-component>
    <component-plugin>
      <name>default.providers</name>
      <set-method>registerProviderPlugin</set-method>
      <type>org.exoplatform.platform.notification.plugin.ProviderPlugin</type>
      <description>Initial values for providers.</description>

      <init-params>
      
        <object-param>
          <name>ActivityMentionProvider</name>
          <description>The activity mention provider</description>
          <object type="org.exoplatform.platform.notification.plugin.ProviderModel">
            <field name="type">
              <string>ActivityMentionProvider</string>
            </field>
            <field name="name">
              <string>activityMention</string>
            </field>
            <field name="params">
              <string><![CDATA[$userid, $activityName, $user-who-mentionned, $replyAction, $viewAction]]></string>
            </field>
            <field name="templates">
              <collection type="java.util.ArrayList">               
                <value>
                  <object type="org.exoplatform.platform.notification.plugin.Language">
                    <field name="name">
                      <string>English</string>
                    </field>
                    <field name="subject">
                      <string><![CDATA[You were mentionned by @user-who-mentionned]]></string>
                    </field>
                    <field name="template">
                      <string>
                        <![CDATA[Title: New mention of you <br/>
                                 Content: $user-who-mentionned has mentionned you in the following post:<br/>
                                 $post<br/>
                               Action: <a href="$replyAction" target="_blank">Reply</a> | <a href="$viewAction" target="_blank">View</a> the full discussion
                        ]]></string>
                    </field>
                  </object>
                </value>
                <value>
                  <object type="org.exoplatform.platform.notification.plugin.Language">
                    <field name="name">
                      <string>French</string>
                    </field>
                    <field name="subject">
                      <string><![CDATA[You were mentionned by @user-who-mentionned]]></string>
                    </field>
                    <field name="template">
                      <string>
                        <![CDATA[Title: New mention of you <br/>
                                 Content: $user-who-mentionned has mentionned you in the following post:<br/>
                                 $post<br/>
                               Action: <a href="$replyAction" target="_blank">Reply</a> | <a href="$viewAction" target="_blank">View</a> the full discussion
                        ]]></string>
                    </field>
                  </object>
                </value>
              </collection>
            </field>
          </object>
        </object-param>

        <object-param>
          <name>ActivityCommentProvider</name>
          <description>The activity comment provider</description>
          <object type="org.exoplatform.platform.notification.plugin.ProviderModel">
            <field name="type">
              <string>ActivityCommentProvider</string>
            </field>
            <field name="name">
              <string>activityComment</string>
            </field>
            <field name="params">
              <string><![CDATA[$other_user_name, $original_activity_message, $activity_comment, $replyAction, $viewAction]]></string>
            </field>
            <field name="templates">
              <collection type="java.util.ArrayList">               
                <value>
                  <object type="org.exoplatform.platform.notification.plugin.Language">
                    <field name="name">
                      <string>English</string>
                    </field>
                    <field name="subject">
                      <string><![CDATA[$other_user_name has commented on your activity]]></string>
                    </field>
                    <field name="template">
                      <string>
                        <![CDATA[Title:  New comment on your activity <br/>
                                 Content: $other_user_name posted a comment on your activity. See the comment below:<br/>
                                 $original_activity_message<br/>
                                 $activity_comment<br/>
                                 Action: <a href="$replyAction" target="_blank">Reply</a> | <a href="$viewAction" target="_blank">View</a> the full discussion
                        ]]></string>
                    </field>
                  </object>
                </value>
                <value>
                  <object type="org.exoplatform.platform.notification.plugin.Language">
                    <field name="name">
                      <string>French</string>
                    </field>
                    <field name="subject">
                      <string><![CDATA[$other_user_name has commented on your activity]]></string>
                    </field>
                    <field name="template">
                      <string>
                        <![CDATA[Title:  New comment on your activity <br/>
                                 Content: $other_user_name posted a comment on your activity. See the comment below:<br/>
                                 $original_activity_message<br/>
                                 $activity_comment<br/>
                                 Action: <a href="$replyAction" target="_blank">Reply</a> | <a href="$viewAction" target="_blank">View</a> the full discussion
                        ]]></string>
                    </field>
                  </object>
                </value>
              </collection>
            </field>
          </object>
        </object-param>

        <object-param>
          <name>ActivityPostProvider</name>
          <description>The activity post provider</description>
          <object type="org.exoplatform.platform.notification.plugin.ProviderModel">
            <field name="type">
              <string>ActivityPostProvider</string>
            </field>
            <field name="name">
              <string>activityPost</string>
            </field>
            <field name="params">
              <string><![CDATA[$other_user_name, $activity_message, $replyAction, $viewAction]]></string>
            </field>
            <field name="templates">
