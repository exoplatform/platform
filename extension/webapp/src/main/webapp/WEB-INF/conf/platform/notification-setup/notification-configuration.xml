<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd"
               xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">

  <external-component-plugins profiles="all">
    <target-component>org.exoplatform.platform.common.service.MenuConfiguratorService</target-component>
    <component-plugin>
      <name>Notification MenuConfigurationService Plugin</name>
      <set-method>addNavigation</set-method>
      <type>org.exoplatform.platform.common.service.plugin.MenuConfiguratorAddNodePlugin</type>
      <init-params>
        <value-param>
          <name>extended.setup.navigation.file</name>
          <value>war:/conf/platform/notification-setup/notification-setup-navigation.xml</value>
        </value-param>
        <value-param>
          <name>isChild</name>
          <value>false</value>
        </value-param>
        <object-param>
          <name>target.node.config</name>
          <description>The target node</description>
          <object type="org.exoplatform.portal.config.model.PageNode">
            <field name="name">
              <string>portal</string>              
            </field>
            <field name="pageReference">
              <string>group::platform/administrators::branding</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>
