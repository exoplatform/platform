<?xml version="1.0"?>
<!DOCTYPE configuration SYSTEM "http://www.exoplatform.org/dtd/indexing-configuration-1.2.dtd">
<configuration xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:wiki="http://exoplatform.org/wiki/1.0/" xmlns:exo="http://www.exoplatform.com/jcr/exo/1.0" xmlns:publication="http://www.exoplatform.com/jcr/publication/1.1/" xmlns:dc="http://purl.org/dc/elements/1.1/">
    <aggregate primaryType="nt:file">
        <include primaryType="nt:resource">jcr:content</include>
    </aggregate>
    <aggregate primaryType="wiki:attachment">
        <include primaryType="nt:resource">jcr:content</include>
    </aggregate>
    <index-rule nodeType="nt:resource">
        <property useInExcerpt="false">jcr:mimeType</property>
        <property useInExcerpt="false">jcr:encoding</property>
        <property useInExcerpt="false">jcr:lastModified</property>
        <property useInExcerpt="false">dc:title</property>
        <property useInExcerpt="false">dc:resourceType</property>
        <property useInExcerpt="false">dc:source</property>
        <property useInExcerpt="false">dc:relation</property>
        <property useInExcerpt="false">dc:description</property>
        <property useInExcerpt="false">dc:rights</property>
        <property useInExcerpt="false">dc:format</property>
        <property useInExcerpt="false">dc:identifier</property>
        <property useInExcerpt="false">dc:coverage</property>
        <property useInExcerpt="false">dc:subject</property>
        <property useInExcerpt="false">dc:creator</property>
        <property useInExcerpt="false">dc:language</property>
        <property useInExcerpt="false">dc:publisher</property>
        <property useInExcerpt="false">dc:contributor</property>
    </index-rule>
    <index-rule nodeType="nt:base">
        <property useInExcerpt="false">exo:name</property>
        <property useInExcerpt="false">jcr:primaryType</property>
        <property useInExcerpt="false">jcr:mixinTypes</property>
        <property useInExcerpt="false">jcr:uuid</property>
        <property useInExcerpt="false">exo:activityId</property>
        <property useInExcerpt="false">exo:dateCreated</property>
        <property useInExcerpt="false">exo:dateModified</property>
        <property useInExcerpt="false">exo:index</property>
        <property useInExcerpt="false">exo:language</property>
        <property useInExcerpt="false">exo:lastModifiedDate</property>
        <property useInExcerpt="false">exo:lastModifier</property>
        <property useInExcerpt="false">exo:owner</property>
        <property useInExcerpt="false">exo:voteTotal</property>
        <property useInExcerpt="false">exo:voteTotalOfLang</property>
        <property useInExcerpt="false">exo:votingRate</property>
        <property useInExcerpt="false">publication:currentState</property>
        <property useInExcerpt="false">publication:history</property>
        <property useInExcerpt="false">publication:lastUser</property>
        <property useInExcerpt="false">publication:lifecycle</property>
        <property useInExcerpt="false">publication:lifecycleName</property>
        <property useInExcerpt="false">publication:revisionData</property>
        <property useInExcerpt="false">jcr:baseVersion</property>
        <property useInExcerpt="false">jcr:created</property>
        <property useInExcerpt="false">jcr:isCheckedOut</property>
        <property useInExcerpt="false">jcr:predecessors</property>
        <property useInExcerpt="false">jcr:versionHistory</property>
        <property useInExcerpt="false">exo:titlePublished</property>
        <property useInExcerpt="false">publication:liveDate</property>
        <property useInExcerpt="false">publication:liveRevision</property>
        <property isRegexp="true">.*</property>
    </index-rule>
</configuration>
