<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.platform</groupId>
      <artifactId>platform-packaging</artifactId>
    <version>4.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>platform-packaging-source</artifactId>
  <packaging>pom</packaging>
  <name>eXo Platform - Packaging Source</name>
  <profiles>
  <profile>
  <id>exo-release</id>
  <build>
  <plugins>
   <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
             <id>unpack-platform-zip</id>
             <phase>generate-resources</phase>
             <goals>
               <goal>unpack</goal>
             </goals>
             <configuration>
               <overWriteSnapshots>true</overWriteSnapshots>                
               <artifactItems>
                                <artifactItem>
					<groupId>org.exoplatform.ecms</groupId>
					<artifactId>ecms</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>
				<artifactItem>
					<groupId>org.exoplatform.platform</groupId>
                    			<artifactId>platform</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>					          
                                        <classifier>source-release</classifier>
				</artifactItem>
                                <artifactItem>
					<groupId>org.exoplatform.social</groupId>
					<artifactId>social</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>
                                <artifactItem>
					<groupId>org.exoplatform.calendar</groupId>
					<artifactId>calendar</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>
                                <artifactItem>
					<groupId>org.exoplatform.wiki</groupId>
					<artifactId>wiki</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>                               
                                <artifactItem>
					<groupId>org.exoplatform.commons</groupId>
					<artifactId>commons</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>                               
                                <artifactItem>
					<groupId>org.exoplatform.core</groupId>
					<artifactId>core-parent</artifactId>
					<version>${org.exoplatform.core.version}</version>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>
                                <artifactItem>
					<groupId>org.exoplatform.gwt</groupId>
					<artifactId>exo-gwtframework-parent</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>                                
                                <artifactItem>
					<groupId>org.exoplatform.jcr</groupId>
 					<artifactId>jcr-parent</artifactId>
 					<type>zip</type>
                                         <outputDirectory>${project.build.directory}/source</outputDirectory>
 					<classifier>source-release</classifier>
 				</artifactItem>
                                 <artifactItem>
 					<groupId>org.exoplatform.kernel</groupId>
 					<artifactId>kernel-parent</artifactId>
 					<type>zip</type>
                                         <outputDirectory>${project.build.directory}/source</outputDirectory>
 					<classifier>source-release</classifier>
 				</artifactItem>
                                 <artifactItem>
 					<groupId>org.exoplatform.ws</groupId>
 					<artifactId>ws-parent</artifactId>
 					<type>zip</type>
                                         <outputDirectory>${project.build.directory}/source</outputDirectory>
 					<classifier>source-release</classifier>
 				</artifactItem>
                                <artifactItem>
					<groupId>org.gatein.portal</groupId>
					<artifactId>exo.portal.parent</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>
                                <artifactItem>
					<groupId>org.exoplatform.integration</groupId>
					<artifactId>integ</artifactId>
					<type>zip</type>
                                        <outputDirectory>${project.build.directory}/source</outputDirectory>
					<classifier>source-release</classifier>
				</artifactItem>                      
                </artifactItems>
              </configuration>
            </execution>
         </executions>
       </plugin>
       <plugin>
             <groupId>org.apache.maven.plugins</groupId>
             <artifactId>maven-assembly-plugin</artifactId>
             <executions>
               <execution>
                 <id>source</id>
                 <phase>package</phase>
                 <goals>
                   <goal>single</goal>
                 </goals>
                 <configuration>
                   <descriptors>
                     <descriptor>src/main/assembly/source-archive.xml</descriptor>
                   </descriptors>                  
                   <appendAssemblyId>false</appendAssemblyId>
                 </configuration>
               </execution>
             </executions>
           </plugin>     
    </plugins>
   </build>
   </profile>
 </profiles>
</project>
