<node-navigation
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_objects_1_2 http://www.gatein.org/xml/ns/gatein_objects_1_2"
    xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_2">
  <priority>1</priority>
  <page-nodes>
    <node>
      <uri>overview</uri>
      <name>overview</name>
      <label>#{portal.acme.overview}</label>
      <visibility>DISPLAYED</visibility>
      <page-reference>portal::acme::overview</page-reference>
    </node>
    
    <node>
      <uri>news</uri>
      <name>news</name>
      <label>#{portal.acme.news}</label>
      <visibility>DISPLAYED</visibility>
      <page-reference>portal::acme::news</page-reference>
    </node>

    <node>
      <uri>products</uri>
      <name>products</name>
      <label>#{portal.acme.products}</label>
      <visibility>DISPLAYED</visibility>
      <page-reference>portal::acme::products</page-reference>
    </node>

    <node>
      <uri>contactus</uri>
      <name>contactus</name>
      <label>#{portal.acme.contactus}</label>
      <page-reference>portal::acme::contactus</page-reference>
      <node>
        <uri>contactus/confirmation</uri>
        <name>confirmation</name>
        <label>#{portal.acme.confirmation}</label>
        <visibility>HIDDEN</visibility>
        <page-reference>portal::acme::confirmation</page-reference>
      </node>
    </node>

    <node>
      <uri>detail</uri>
      <name>detail</name>
      <label>#{portal.acme.detail}</label>
      <visibility>SYSTEM</visibility>
      <page-reference>portal::acme::detail</page-reference>
    </node>
	
	<node>
      <uri>catalog</uri>
      <name>catalog</name>
      <label>#{portal.acme.catalog}</label>
      <visibility>SYSTEM</visibility>
      <page-reference>portal::acme::catalog</page-reference>
    </node>

    <node>
      <uri>printviewer</uri>
      <name>printviewer</name>
      <label>#{portal.acme.printviewer}</label>
      <visibility>SYSTEM</visibility>
      <page-reference>portal::acme::printviewer</page-reference>
    </node>

    <node>
      <uri>searchResult</uri>
      <name>searchResult</name>
      <label>#{portal.acme.searchResult}</label>
      <visibility>HIDDEN</visibility>
      <page-reference>portal::acme::searchResult</page-reference>
    </node>
  <!-- Unified Search page -->
  <node>
    <uri>search</uri>
    <name>search</name>
    <label>#{portal.acme.unifiedSearch}</label>
    <visibility>HIDDEN</visibility>
    <page-reference>portal::acme::search</page-reference>
  </node>
  <!-- File explorer -->
  <node>
    <uri>documents</uri>
    <name>documents</name>
    <label>#{portal.acme.documents}</label>
    <visibility>HIDDEN</visibility>
    <page-reference>portal::acme::documents</page-reference>
  </node>
    <node>
      <uri>newAccount</uri>
      <name>newAccount</name>
      <label>#{portal.acme.newAccount}</label>
      <visibility>HIDDEN</visibility>
      <page-reference>portal::acme::newAccount</page-reference>
    </node>

  </page-nodes>
</node-navigation>
