                <field name="nodePath">
                  <string>/sites content/live/{portalName}/css</string>
                </field>
              </object>
            </field>
            <field name="sourcePath">
              <string>war:/conf/acme-portal/wcm/artifacts/site-resources/acme-templates/StylesheetGreen.xml</string>
            </field>
