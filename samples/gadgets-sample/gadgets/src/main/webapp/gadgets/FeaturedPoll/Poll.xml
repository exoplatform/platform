<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Featured Poll" author="Do Thanh Tung" author_email="tungdt@exoplatform.com" thumbnail="/intranet-gadgets/skin/images/FeaturedPoll/Polls.png" description="Show a featured poll">
