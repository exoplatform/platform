<portal-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_2" xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_objects_1_2 http://www.gatein.org/xml/ns/gatein_objects_1_2">
  <portal-name>Sample Accessible Website</portal-name>
  <locale>en</locale>
  <access-permissions>Everyone</access-permissions>
  <edit-permission>*:/platform/web-contributors</edit-permission>
  <properties>
    <entry key="sessionAlive">onDemand</entry>
    <entry key="showPortletInfo">0</entry>
  </properties>
  <portal-layout id="template-WAIPortal">
    <container id="WAIPortalLayout" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
      <access-permissions>Everyone</access-permissions>
      <container id="WAIPortalToolbar" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
        <access-permissions>Everyone</access-permissions>
        <portlet-application>
          <portlet>
              <application-ref>presentation</application-ref>
              <portlet-ref>ContentListViewerPortlet</portlet-ref>
              <preferences>
                <preference>
                  <name>folderPath</name>
                  <value>repository:collaboration:/sites/@owner@/categories/@owner@</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>nodeDrive</name>
                  <value>Managed Sites</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>orderType</name>
                  <value>ASC</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>formViewTemplatePath</name>
                  <value>/exo:ecm/views/templates/content-list-viewer/list/AccessibleToolbar.gtmpl</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>basePath</name>
                  <value>detail</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>itemsPerPage</name>
                  <value>5</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>showTitle</name>
                  <value>false</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>showDateCreated</name>
                  <value>false</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
              <name>sharedCache</name>
              <value>false</value>
              <read-only>false</read-only>
              </preference>
                <preference>
                  <name>showHeader</name>
                  <value>false</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>showLink</name>
                  <value>false</value>
                  <read-only>false</read-only>
                </preference>
              </preferences>
            </portlet>
          <title>Portal Toolbar</title>
          <access-permissions>Everyone</access-permissions>
          <show-info-bar>false</show-info-bar>
          <show-application-state>false</show-application-state>
          <show-application-mode>false</show-application-mode>
        </portlet-application>
      </container>
      <container id="WAIPortalBottom" template="system:/groovy/portal/webui/container/UITableColumnContainer.gtmpl">
        <access-permissions>Everyone</access-permissions>
        <container id="WAIPortalLogo" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
          <access-permissions>Everyone</access-permissions>
          <portlet-application>
            <portlet>
              <application-ref>presentation</application-ref>
              <portlet-ref>ContentListViewerPortlet</portlet-ref>
              <preferences>
                <preference>
                  <name>folderPath</name>
                  <value>repository:collaboration:/sites/@owner@/categories/@owner@</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>nodeDrive</name>
                  <value>Managed Sites</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>orderType</name>
                  <value>ASC</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>formViewTemplatePath</name>
                  <value>/exo:ecm/views/templates/content-list-viewer/list/AccessibleBanner.gtmpl</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>basePath</name>
                  <value>detail</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>itemsPerPage</name>
                  <value>5</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>showTitle</name>
                  <value>false</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>showDateCreated</name>
                  <value>false</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
              <name>sharedCache</name>
              <value>false</value>
              <read-only>false</read-only>
              </preference>
                <preference>
                  <name>showHeader</name>
                  <value>false</value>
                  <read-only>false</read-only>
                </preference>
                <preference>
                  <name>showLink</name>
                  <value>false</value>
                  <read-only>false</read-only>
                </preference>
              </preferences>
            </portlet>
            <title>Banner</title>
            <access-permissions>Everyone</access-permissions>
            <show-info-bar>false</show-info-bar>
            <show-application-state>false</show-application-state>
            <show-application-mode>false</show-application-mode>
          </portlet-application>
        </container>
      </container>
    </container>
    <page-body>
    </page-body>
    <portlet-application>
      <portlet>
        <application-ref>presentation</application-ref>
        <portlet-ref>SingleContentViewer</portlet-ref>
        <preferences>
          <preference>
            <name>workspace</name>
            <value>collaboration</value>
            <read-only>false</read-only>
          </preference>
          <preference>
            <name>nodeIdentifier</name>
            <value>/sites/@owner@/web contents/site artifacts/Footer</value>
            <read-only>false</read-only>
          </preference>
          <preference>
            <name>ShowQuickEdit</name>
            <value>true</value>
            <read-only>false</read-only>
          </preference>
          <preference>
            <name>ShowPrintAction</name>
            <value>false</value>
            <read-only>false</read-only>
          </preference>
          <preference>
            <name>ShowTOC</name>
            <value>false</value>
            <read-only>false</read-only>
          </preference>
          <preference>
            <name>ShowTags</name>
            <value>false</value>
            <read-only>false</read-only>
          </preference>
          <preference>
            <name>ShowCategories</name>
            <value>false</value>
            <read-only>false</read-only>
          </preference>
          <preference>
            <name>ShowTitle</name>
            <value>false</value>
            <read-only>false</read-only>
          </preference>
        </preferences>
      </portlet>
      <title>Footer</title>
      <access-permissions>Everyone</access-permissions>
      <show-info-bar>false</show-info-bar>
      <show-application-state>false</show-application-state>
      <show-application-mode>false</show-application-mode>
    </portlet-application>
  </portal-layout>
</portal-config>