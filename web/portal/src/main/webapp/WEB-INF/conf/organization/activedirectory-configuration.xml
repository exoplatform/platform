          <value>org/exoplatform/services/organization/impl/UserProfileData.hbm.xml</value>
        </values-param>
      </init-params>
    </component-plugin>
   </external-component-plugins-->
   
   <import>classpath:/conf/portal/organization-configuration.xml</import>   
</configuration>
