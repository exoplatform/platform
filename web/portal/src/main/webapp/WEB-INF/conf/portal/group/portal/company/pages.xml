<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set>
  <page>
  	<page-id>group::portal/company::home</page-id>
  	<owner-type>group</owner-type>
    <owner-id>portal/company</owner-id>
    <name>home</name>
    <access-permissions>*:/portal/admin</access-permissions>   
    <edit-permission>owner:/portal/company</edit-permission>
    <show-max-window>true</show-max-window>
    
    <application>
	    <instance-id>group#portal/company:/web/SiteMapPortlet/sitemap</instance-id>
      <title>Company site portlet</title>
	    <show-info-bar>false</show-info-bar>
	  </application>
  </page>  
  
  <page>
  	<page-id>group::portal/company::organization</page-id>
 		<owner-type>group</owner-type>
    <owner-id>portal/company</owner-id>
    <name>organization</name>
    <access-permissions>*:/portal/company; *:/portal/admin</access-permissions>
    <edit-permission>owner:/portal/company</edit-permission>
    
    <application>
      <instance-id>group#portal/company:/exoadmin/OrganizationPortlet/Organization</instance-id>    
      <title>Organization portlet</title>
	  	<show-info-bar>true</show-info-bar>
	  	<show-application-state>true</show-application-state>
		</application>	
  </page>
  
  <page>
  	<page-id>group::portal/company::myaccount</page-id>
  	<owner-type>group</owner-type>
    <owner-id>portal/company</owner-id>
    <name>myaccount</name>
    <access-permissions>*:/portal/company</access-permissions>
    <edit-permission>owner:/portal/company</edit-permission>
    
    <application>
      <instance-id>group#portal/company:/exoadmin/AccountPortlet/Account</instance-id>    
      <title>Account portlet</title>
      <show-info-bar>false</show-info-bar>
    </application>  
  </page> 
</page-set>
